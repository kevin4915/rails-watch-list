<div class="m-3">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <div class="mb-3">
      <label class="form-label">Your rating</label>
      <div class="star-rating">
        <% 5.downto(1) do |i| %>
          <%= f.radio_button :rating, i, id: "star_#{i}", class: "star-input" %>
          <%= f.label :rating, "â˜…", for: "star_#{i}", class: "star-label" %>
        <% end %>
      </div>
    </div>
    <%= f.button :submit, class: "btn" %>
  <% end %>

  <%= link_to "Back to Films lists", lists_path, class: "btn mt-3" %>
</div>
